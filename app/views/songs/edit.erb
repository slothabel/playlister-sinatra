<% if flash.has?(:message) %>
 <%= flash[:message] %> 
 <% end %>

<form action="/songs/<%= @song.slug %>" method="POST"> 
 <input type="hidden" name="_method" value="patch">  

 <h1>Edit page for: <%= @song.name %> </h1>


 <h3> Current artist: <%= @song.artist.name %>  </h3>


 <label>Artist name:</label>
 <input type="text" id="Artist Name" name="artist[name]" value="<%= @song.artist.name %>"><br></br>


 <label>Edit Genres:</label><br>
 <% Genre.all.each do |genre| %>   
    <br>
     <label><%= genre.name %></label>   
      <input type="checkbox" name="genres[]" value="<%= genre.id %>" id="<%= genre.name %>" <%='checked' if @song.genres.include?(genre) %>>  
    <% end %>




 <input type="submit" value="Save">
 </form>